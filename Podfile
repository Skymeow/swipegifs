# Uncomment this line to define a global platform for your project
platform :ios, '9.0'
source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!


target 'giphyFun' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for giphyFun
  
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'FirebaseUI/Auth'
  pod 'Firebase/Database'
  pod 'Firebase/Storage'
  
  pod 'Kingfisher', '~> 3.0'
  pod 'Alamofire', '~> 4.4'
  pod 'SwiftyJSON', :git => 'https://github.com/IBM-Swift/SwiftyJSON.git'
  pod 'AlamofireImage', :git => 'https://github.com/Alamofire/AlamofireImage.git'
  pod 'AlamofireNetworkActivityIndicator', :git => 'https://github.com/Alamofire/AlamofireNetworkActivityIndicator.git'
  pod 'SwiftGifOrigin'
  
  pod 'FacebookCore'
  pod 'FacebookLogin'
  pod 'FirebaseUI/Facebook'
  
  pod 'GoogleSignIn'
  pod 'FirebaseUI/Google'
  
  pod 'FoldingCell', '~> 2.0.3' 
  pod "EasyPeasy"
  
end
